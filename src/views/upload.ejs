<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Upload a file</title>
  </head>
  <body>
    <h1>Upload a file</h1>
    <form action="/upload" method="post" enctype="multipart/form-data">
      <div class="form-item">
        <label for="file"> Select file to upload </label>
        <input required type="file" name="file" />
      </div>
      <div class="form-item">
        <label for="folder">
          Select a folder to add your file to (optional)
        </label>
        <% if (folders.length > 0) { %>

        <select
          name="folderId"
          id="none"
          style="padding: 3px; text-transform: capitalize"
        >
          <% folders.forEach((folder) => { %>
          <option value="<%= folder.id %>"><%= folder.name %></option>
          <%})%>
        </select>
        <%} else {%>
        <span style="font-size: smaller; color: green">
          You have no folder to add your file to. Folders you create will appear
          here
          <a href="/my-folders"> create a folder </a>
        </span>
        <% } %>
      </div>

      <button type="submit">Upload</button>
    </form>
  </body>
</html>
